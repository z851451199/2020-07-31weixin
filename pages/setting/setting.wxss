/* 页面主体 */
page{
  height: 100%;
  overflow: hidden;
 }
.brand-page{
  width: 100%;
  height: 100%;
  /* background: rgba(231, 230, 230,0.6); */
 }
.brand{
  width: 100%;
  height: 90%;
  overflow: auto;
  display: flex;
  flex-flow: column;
  background: rgba(231, 230, 230,0.6);
}
/* 页面上部内容 */
.head{
  width: 100%;
  height:20%;
  background: rgb(253, 251, 251);
  margin-bottom:30rpx ;
  position: relative;
}
/* 品牌/修改 */
.head-nav{
  width: 100%;
  margin-bottom: 10rpx;
  float: left;
}
.head-title{
  float: left;
  font-size: 39rpx;
  padding: 10rpx;
}
.head-modify{
  float: right;
  padding:15rpx 10rpx;
  color: rgb(232, 56, 17);
}
.head-choice{
  text-align: left;
}
.head-none{
  text-align: center;
}
.head-nbtn{
  display: inline;
  position: relative;
  top: 30rpx;
  font-size: 30rpx;
  padding:20rpx 60rpx;
  background: rgba(255, 200, 210,0.6);
  border:1rpx solid rgb(253, 158, 174);
  border-radius: 50rpx;
}
